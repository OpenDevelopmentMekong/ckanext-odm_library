{
	"scheming_version": 1,
	"dataset_type": "library_record",
	"about": "ODM Library metadata schema",
	"about_url": "http://github.com/open-data/ckanext-scheming",
	"dataset_fields": [{
		"field_name": "document_type",
		"label": "Document type",
		"preset": "select",
		"required": "true",
		"choices": [{
			"value": "advocacy_and_promotional_materials",
			"label": "Advocacy and promotional materials"
		}, {
			"value": "analysis_discussion_papers_and_blogs",
			"label": "Analysis, discussion papers, and blogs"
		}, {
			"value": "books_and_book_chapters",
			"label": "Books and book chapters"
		}, {
			"value": "case_studies",
			"label": "Case studies"
		}, {
			"value": "issue_and_policy_briefs",
			"label": "Issue and policy briefs"
		}, {
			"value": "profiles_people",
			"label": "Profiles - People"
		}, {
			"value": "profiles_organizations_and_projects",
			"label": "Profiles - Organizations  and projects"
		}, {
			"value": "profiles_geographical_areas_and_sites",
			"label": "Profiles - Geographical areas and sites"
		}, {
			"value": "conference_workshops_proceedings_and_presentations",
			"label": "Conference/workshop proceedings and presentations"
		}, {
			"value": "reports_journal_articles_and_research_papers",
			"label": "Reports, journal articles, and research papers (including theses and dissertations)"
		}]
	},{
		"field_name": "odm_language",
		"label": "Language (of doc)",
		"required": "true",
		"form_placeholder": "Language(s) of the dataset, including resources within dataset.",
		"preset": "multiple_select",
		"select_size": 4,
		"choices": [{
			"value": "my",
			"label": "Burmese"
		}, {
			"value": "en",
			"label": "English"
		}, {
			"value": "km",
			"label": "Khmer"
		}, {
			"value": "lo",
			"label": "Lao"
		}, {
			"value": "th",
			"label": "Thai"
		}, {
			"value": "vi",
			"label": "Vietnamese"
		}, {
			"value": "zh",
			"label": "Chinese"
		}, {
			"value": "fr",
			"label": "French"
		}, {
			"value": "de",
			"label": "German"
		}, {
			"value": "jp",
			"label": "Japanese"
		}, {
			"value": "ko",
			"label": "Korean"
		}, {
			"value": "other",
			"label": "Other"
		}]
	}, {
		"field_name": "name",
		"label": "URL",
		"preset": "dataset_slug",
		"form_placeholder": "eg. my-dataset"
	}, {
		"field_name": "title_translated",
		"preset": "fluent_core_translated_single",
		"label": {
			"en": "Formal full title",
			"th": "Formal full title",
			"km": "Formal full title",
			"vi": "Formal full title"
		},
		"form_languages": ["en", "th", "km", "vi"],
    "form_attrs": {
      "data-module": "slug-preview-target"
    }
	}, {
		"field_name": "marc21_246",
		"label": "Short title (alternative/varying form of title)",
    "label": {
			"en": "Short title (alternative/varying form of title)",
			"th": "Short title (alternative/varying form of title)",
			"km": "Short title (alternative/varying form of title)",
			"vi": "Short title (alternative/varying form of title)"
		},
		"form_languages": ["en", "th", "km", "vi"],
		"form_snippet": "text.html",
		"form_placeholder": "Parallel title or translation."
	}, {
		"field_name": "taxonomy",
		"label": "Topics",
		"preset": "odm_taxonomy",
    "required": "true",
		"form_placeholder": "eg. economy, mental health, government"
	}, {
		"field_name": "notes_translated",
		"preset": "fluent_core_translated_markdown_single",
		"label": {
			"en": "Short summary (contents)",
			"th": "Short summary (contents)",
			"km": "Short summary (contents)",
			"vi": "Short summary (contents)"
		},
		"form_languages": ["en", "th", "km", "vi"]
	}, {
		"field_name": "odm_spatial_range",
		"label": "Geographic area (Spatial Range)",
		"form_placeholder": "The geographic area that the dataset is relevant to (i.e. Cambodia, Laos).",
		"preset": "multiple_select",
		"required": "true",
		"select_size": 4,
		"choices": [{
			"value": "global",
			"label": "Global"
		}, {
			"value": "asean",
			"label": "ASEAN"
		}, {
			"value": "gms",
			"label": "Greater Mekong Subregion (GMS)"
		}, {
			"value": "lmb",
			"label": "Lower Mekong Basin"
		}, {
			"value": "lmc",
			"label": "Lower Mekong countries"
		}, {
			"value": "kh",
			"label": "Cambodia"
		}, {
			"value": "vn",
			"label": "Vietnam"
		}, {
			"value": "la",
			"label": "Laos"
		}, {
			"value": "th",
			"label": "Thailand"
		}, {
			"value": "mm",
			"label": "Myanmar"
		}]
	}, {
		"field_name": "odm_copyright",
		"label": "Copyright",
		"preset": "odm_copyright",
		"help_text": "Select 'yes', 'no' or 'unclear copyright' about the copyright of the dataset. If copyright of any type is present, describe further in Access and User Constraints."
	}, {
		"field_name": "odm_access_and_use_constraint",
		"preset": "fluent_markdown_single",
		"label": {
			"en": "Access and Use Constraints",
			"th": "การเข้าถึงและข้อจำกัด",
			"km": "កំហិតនៃការចូល និងប្រើប្រាស់",
			"vi": "Hạn chế truy cập và sử dụng"
		},
		"form_languages": ["en", "th", "km", "vi"],
		"form_placeholder": "A few sentences describing legal considerations for people who access the website and/or use its contents."
	}, {
		"field_name": "version",
		"label": "Version / Edition",
		"validators": "scheming_required unicode package_version_validator",
		"form_placeholder": "1.0",
		"required": "true"
	}, {
		"field_name": "owner_org",
		"label": "Organization",
		"preset": "dataset_organization"
	}, {
		"field_name": "odm_date_uploaded",
		"label": "Date uploaded",
		"form_placeholder": "Date a new version or update of the dataset was uploaded.",
		"required": "true",
		"preset": "odm_date"
	}, {
		"field_name": "license_id",
		"label": "License",
		"preset": "odm_license",
		"help_text": "License definitions and additional information can be found at http://opendefinition.org/"
	}, {
		"field_name": "odm_contact",
    "preset": "fluent_markdown_single",
		"label": {
			"en": "Contact",
			"th": "ข้อมูลติดต่อ",
			"km": "ទំនាក់ទំនង",
			"vi": "Liên hệ"
		},
		"form_languages": ["en", "th", "km", "vi"],
		"form_placeholder": "Contact information for the individual or organization that is responsible for or most knowledgeable about the dataset. This could be the author of a report, the contact information for the relevant department of an organization that produced a report, or the data analyst, mapper or researcher that produced a dataset or report."
	}, {
		"field_name": "marc21_100",
		"label": "Author (individual)",
		"form_snippet": "text.html",
		"form_placeholder": "Main Entry-Personal Name (author)."
	}, {
		"field_name": "marc21_110",
		"label": "Author (corporate)",
		"form_snippet": "text.html",
		"form_placeholder": "Main Entry-Corporate Name (corporate author) or title of journal."
	}, {
		"field_name": "marc21_700",
		"label": "Co-Author (individual)",
		"form_snippet": "text.html",
		"form_placeholder": "Personal Name (co-author), more than one author. "
	}, {
		"field_name": "marc21_710",
		"label": "Co-Author (coorporate)",
		"form_snippet": "text.html",
		"form_placeholder": "Corporate Name, more than one Corporate. "
	}, {
		"field_name": "marc21_020",
		"label": "ISBN",
		"form_snippet": "text.html",
		"form_placeholder": "A 13-digit number that uniquely identifies  most books and book-like products please enter if ISBN appears on publication."
	}, {
		"field_name": "marc21_022",
		"label": "ISSN",
    "form_snippet": "text.html",
		"form_placeholder": ""
	}, {
		"field_name": "marc21_260a",
    "preset": "fluent_text_single",
    "label": {
			"en": "Publication place",
			"th": "Publication place",
			"km": "Publication place",
			"vi": "Publication place"
		},
		"form_languages": ["en", "th", "km", "vi"],
		"form_placeholder": "Place of publisher"
	}, {
		"field_name": "marc21_260b",
    "preset": "fluent_text_single",
    "label": {
			"en": "Publisher",
			"th": "ผู้พิมพ์",
			"km": "អ្នកបោះពុម្ពផ្សាយ",
			"vi": "Nhà xuất bản"
		},
		"form_languages": ["en", "th", "km", "vi"],
		"form_placeholder": "Name of publishing organization"
	}, {
		"field_name": "marc21_260c",
		"label": "Publication date",
		"form_placeholder": "Date published (YYYY)",
    "preset": "number"
	}, {
		"field_name": "marc21_300",
    "preset": "fluent_text_single",
		"label": {
			"en": "Pagination",
			"th": "การให้เลขหน้า",
			"km": "ការបង់លេខ",
			"vi": "Đánh số trang"
		},
		"form_languages": ["en", "th", "km", "vi"],
		"form_placeholder": "Physical Description (pagination)."
	}, {
		"field_name": "marc21_500",
    "preset": "fluent_markdown_single",
		"label": {
			"en": "General Note",
			"th": "หมายเหตุทั่วไป",
			"km": "កំណត់សំគាល់ទូទៅង",
			"vi": "Chú ý"
		},
		"form_languages": ["en", "th", "km", "vi"],
		"form_placeholder": "General Note."
	}],
  "resource_fields": [{
		"field_name": "url",
		"label": "URL",
		"preset": "resource_url_upload"
	}, {
		"field_name": "name",
		"label": "Name",
		"form_placeholder": "eg. January 2011 Gold Prices",
		"preset": "odm_resource_name"
	}, {
		"field_name": "description",
		"label": "Description",
		"form_placeholder": "Some useful notes about the data",
		"preset": "odm_resource_description"
	}, {
		"field_name": "format",
		"label": "Format",
		"preset": "resource_format_autocomplete"
	}, {
		"field_name": "odm_language",
    "label": "Resource's languages",
    "preset": "multiple_select",
		"select_size": 4,
		"choices": [{
			"value": "my",
			"label": "Burmese"
		}, {
			"value": "en",
			"label": "English"
		}, {
			"value": "km",
			"label": "Khmer"
		}, {
			"value": "lo",
			"label": "Lao"
		}, {
			"value": "th",
			"label": "Thai"
		}, {
			"value": "vi",
			"label": "Vietnamese"
		}, {
			"value": "zh",
			"label": "Chinese"
		}, {
			"value": "fr",
			"label": "French"
		}, {
			"value": "de",
			"label": "German"
		}, {
			"value": "jp",
			"label": "Japanese"
		}, {
			"value": "ko",
			"label": "Korean"
		}, {
			"value": "other",
			"label": "Other"
		}]
	}]
}
